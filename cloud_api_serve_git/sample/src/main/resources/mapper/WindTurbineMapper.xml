<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dji.sample.df.wind.dao.WindTurbineMapper">

    <select id="selectList" resultType="com.dji.sample.df.wind.model.entity.WindTurbine">
        SELECT * FROM blade_df
        <where>
            <if test="turbineName!=null and turbineName!=''">
                and turbine_name LIKE concat('%', #{turbineName},'%')
            </if>
        </where>
        <if test="pageSize != null and pageSize != '' ">
            LIMIT ${startPos}, ${pageSize}
        </if>
    </select>
</mapper>
